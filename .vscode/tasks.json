	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "tsc_validate_watch",
			"isBackground": true,
			"problemMatcher": ["$tsc-watch"],
			"presentation": {
				"echo": true,
				"reveal": "never",
				"focus": false,
				"panel": "dedicated"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}

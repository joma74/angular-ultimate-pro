{
  "compilerOptions": {
    "outDir": "./target",
    "allowJs": true,
    "baseUrl": "./src",
    "checkJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es5", "es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "pretty": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "suppressImplicitAnyIndexErrors": true,
    "maxNodeModuleJsDepth": 0,
    "target": "es5",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": ["node", "testcafe"]
  },
  "exclude": ["build", "dist", "node_modules", "target"],
  "include": ["config/**/*", "src/**/*"],
  "compileOnSave": false,
  "typeAcquisition": {
    "enable": true
  }
}
